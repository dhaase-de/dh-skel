# do not show license at startup
startup_message   off

# message style
sorendition       "=s kW"

# window caption style
caption           splitonly "%{=s kW} %n %t"

# statusbar style
hardstatus        alwayslastline "%{=s Wk}(#screen) %-w %{=s kW}%n %t%{=s Wk} %+w"

# no bell
vbell             off

# do not monitor for activity
defmonitor        off

# scrollback history
defscrollback     5000
compacthist       on

# detach on hangup
autodetach        on

# used by '.bashrc'
setenv            WITHIN_SCREEN "yes"

