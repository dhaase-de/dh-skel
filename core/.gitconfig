[user]
name = Daniel Haase
email = git@dhaase.de

[credential]
helper = cache --timeout=2678400

[alias]
an = annex
br = branch
cm = checkout main
co = checkout
dt = describe --tags
di = diff
dc = diff --cached
lg = log --graph
rv = remote --verbose
st = status

[init]
defaultBranch = main

[core]
pager = less -R

[pager]
branch = false
tag = false

[color]
branch = auto
diff = auto
grep = auto
pager = true
status = auto

[format]
pretty = %ai (%an)  [%Cgreen%h%Creset]%Cred%d%Creset  %s

[push]
default = simple

[rebase]
stat = true

[status]
branch = true
short = true

[help]
autocorrect = 0
